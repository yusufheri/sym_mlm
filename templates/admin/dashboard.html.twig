{% endblock %}

{% block body %}
    {% include "admin/partials/header.html.twig" %}    
    <div class="container-fluid">
        <div class="row">
             {% include "admin/partials/menu.html.twig" %}

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Tableau de bord</h1>
                </div>
               
                <div class="row my-3">
                    <div class="col-md">
                        <div class="card text-white bg-primary mb-3 text-center">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <i class="fas fa-users fa-3x"></i>
                                    </div>
                                    <div class="col-md-8">
                                        <h4 class="card-title">{{ stats.members }} Membres enregistrés (Total général)</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="card text-white bg-success mb-3 text-center">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <i class="fas fa-users fa-3x"></i>
                                    </div>
                                    <div class="col-md-8">
                                        <h4 class="card-title">{{stats.currentMonth}} membres enregistrés (mois en cours)</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="card text-white bg-warning mb-3 text-center">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <i class="fas fa-folder-open fa-3x"></i>
                                    </div>
                                    <div class="col-md-8">
                                        <h4 class="card-title">{{stats.currentpaiement | number_format('1', ',',' ')}} &dollar;  Situation caisse (mois en cours)</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr> 
                <div class="row my-3">  
                      
                    <div class="col-md-6">  
                        <h3>Situation hebdomadaire (USD)</h3>                      
                        <canvas id="myChart"></canvas>
                    </div>
                    <div class="col-md-6">
                        <h3 class="text-center">Proportion par catégorie</h3>
                        <canvas id="chart-area"></canvas>
                    </div>
                </div>
                

