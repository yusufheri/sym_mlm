{% extends "base.html.twig" %}

{% block title %}Administration des Utilsateurs::{% endblock %}
{% block body %}
    {% include "partials/header.html.twig" %} 
     <div class="container">
            <h2 class="h1 my-5">Gestion des utilisateurs </h2>

            <div class="row">
                {% for user in users %}
                    <div class="col-md-3 ">
                        <div class="card bg-light align-items-center mb-3">
                            {% if app.user.local == true %}
                                <img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="Avatar de {{user.fullName}}" class="avatar  my-3">
                            {% else %}
                                <img src="{{user.picture}}" alt="Avatar de {{user.fullName}}" class="avatar  my-3">     
                            {% endif %}
                            
                            {# {% if user.picture %}
                                <img src="{{ vich_uploader_asset(member, 'imageFile') }}" alt="Avatar de {{member.fullName}}" style="width: 100%; height: 200px; display: block;" class="avatar mb-3">
                            {% else %}
                                {% if member.category.indice == 1 %}
                                    <img src="/images/members/avatar.jpg" alt="Avatar de {{member.fullName}}" style="width: 100%; height: 200px; display: block;" class="avatar mb-3">
                                {% else %}
