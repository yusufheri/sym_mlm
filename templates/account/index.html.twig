                                {% endif %}
                            {% endif %}  #}

                            <div class="card-body ">

                                <b><small>{{ user.email }}</small></b><br\>
                                <p>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="customSwitch1"  {% if user.state == true %}checked{% endif %}>
                                        <label class="custom-control-label" for="customSwitch1">
                                            {% if user.state == true %}Activé{% else %}Bloqué{% endif %}
                                        </label>
                                    </div>
                                </p>
                                <a href="#" class="btn btn-warning">En savoir plus !</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
       </div>

{% endblock %}
